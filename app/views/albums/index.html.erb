<h1>Albums</h1>

<table>
    <thread>
    <th>Title</th>
    <th>Body</th>
    <th>Photographs</th>
    <th>Extra Content</th>
    </thread>


    <tbody>
        <% @albums.each do |album| %>
        <tr>
            <td><%= album.title %></td>
            <td><%= album.body %></td>    
            <td><%= link_to 'Edit', edit_album_path(album)if logged_in?(:site_admin) %></td>
            <td><%= link_to 'Show', album %></td>
            <td><%= link_to 'Delete Item', album_path(album), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %></td>

            </tr>
        <% end %>
    </tbody>
<td>Music for the soul</td>
        
</table>

<%= link_to 'New Album', new_album_path if logged_in?(:site_admin) %>